/*
 * angular-eslint
 * .eslintrc.json
 * We strongly recommend you stick to using .eslintrc.json.
 * https://github.com/angular-eslint/angular-eslint#notes-on-supported-eslint-configuration-file-types
 */
{
  "root": true,
  "ignorePatterns": ["projects/**/*"],
  "overrides": [
    {
      "files": ["*.ts"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": { "project": true },
      "plugins": [
        /* TODO: Reinstate when compatible with eslint 9
            "eslint-plugin-import": "2.29.1",
        "eslint-plugin-import",
        */
        "@angular-eslint/eslint-plugin",
        "@typescript-eslint",
        "boundaries"
      ],
      "extends": [
        "eslint:recommended",
        "plugin:@angular-eslint/recommended",
        "plugin:@angular-eslint/template/process-inline-templates",
        "plugin:@angular-eslint/template/process-inline-templates",
        "plugin:@typescript-eslint/strict-type-checked",
        "plugin:@typescript-eslint/stylistic-type-checked",
        "prettier",
        "plugin:boundaries/recommended"
      ],
      "settings": {
        "boundaries/elements": [
          // "mode": "file" < Does not include folders
          // "mode": "folder" <-- default
          {
            "type": "src-files",
            "pattern": "src/*",
            "mode": "file"
          },
          {
            "type": "services",
            "pattern": "app/services/*",
            "mode": "file"
          },
          {
            "type": "src-app",
            "pattern": "src/app/*",
            "mode": "file"
            // "allow": ["services"]
          },
          {
            "type": "src-examples",
            "pattern": "src/+examples/*",
            "mode": "file"
          },
          {
            "type": "src-examples",
            "pattern": "src/+examples/*",
            "mode": "folder"
          },
          {
            "type": "src-environments",
            "pattern": "src/environments/*",
            "mode": "file"
          },
          {
            "type": "app-components",
            "pattern": "app/components/*"
          },
          {
            "type": "app-components-file",
            "pattern": "app/components/*",
            "mode": "file"
          },
          {
            "type": "features",
            "pattern": "features/*"
          }
        ],
        "boundaries/include": ["src/**/*.ts"],
        "boundaries/ignore": ["src/**/*.spec.ts"],
        "import/resolver": {
          "typescript": {
            "alwaysTryTypes": true
          }
        }
      },
      "rules": {
        "boundaries/no-unknown-files": [2], // 0=off, 1=warn, 2=error
        "boundaries/element-types": [
          2,
          {
            "default": "disallow",
            "rules": [
              {
                "from": "services",
                "allow": ["src-environments"]
              },
              {
                "from": "src-app",
                "allow": ["services", "src-app"]
              },
              {
                "from": "src-files",
                "allow": ["services", "src-app", "src-environments"]
              },
              {
                "from": "src-environments",
                "allow": ["src-environments"]
              }
            ]
          }
        ],
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "app",
            "style": "camelCase"
          }
        ],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "app",
            "style": "kebab-case"
          }
        ],
        "@typescript-eslint/consistent-type-assertions": [
          "error",
          {
            "assertionStyle": "as",
            "objectLiteralTypeAssertions": "never"
          }
        ],
        //
        "@typescript-eslint/consistent-type-definitions": ["error", "type"],

        "@typescript-eslint/no-extraneous-class": [
          "error",
          {
            "allowWithDecorator": true
          }
        ]
      }
    },
    {
      "files": ["*.html"],
      "extends": [
        "plugin:@angular-eslint/template/recommended",
        "plugin:@angular-eslint/template/accessibility"
      ],
      "rules": {}
    },
    {
      "files": ["*.mjs"],
      "env": {
        "es2020": true
      },
      "parserOptions": {
        "sourceType": "module"
      }
    },
    {
      "files": ["*.spec.ts"],
      "env": {
        "jest/globals": true
      },
      "plugins": [
        "jest",
        "jest-dom"
        /* TODO: Reinstate when compatible with eslint 9      
        "testing-library"
           "eslint-plugin-testing-library": "6.3.0",
        */
      ],
      "extends": [
        /* TODO: Reinstate when compatible with eslint 9          
        "plugin:testing-library/angular",
        */
        "plugin:jest/recommended",
        "plugin:jest/style",
        "plugin:jest-dom/recommended"
      ],
      "rules": {
        /* TODO: Reinstate when compatible with eslint 9         
        "testing-library/prefer-explicit-assert": "error",
        */
        "jest/consistent-test-it": ["error"],
        "jest/expect-expect": "off"
      }
    }
  ]
}
